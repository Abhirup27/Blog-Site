<%- include("partials/header.ejs") %>

<div class="max-w-md mx-auto" x-data="{isLogin:true}">
    <h2 class="text-2xl font-semibold mb-4" x-text="isLogin ? 'Please Login' : 'Please Register'"></h2>
    
    <!-- Login Form -->
    <form x-show="isLogin" action="/login" method="post" class="space-y-4">      
        <div class="space-y-2">
            <div class="flex items-center">
                <i class="ri-user-line mr-2"></i>
                <input type="text" class="input w-full border-white-500 focus:outline-none focus:border-red-500" 
                    name="username" placeholder="Email Address" required autofocus />
            </div>
            <div class="flex items-center">
                <i class="ri-lock-line mr-2"></i>
                <input type="password" class="input w-full hover:border-red-500" 
                    name="password" placeholder="Password" required />
            </div>
        </div>
        <div class="flex items-center">
            <input type="checkbox" id="rememberMe" name="rememberMe" class="mr-2 hover:border-red-500" />
            <label for="rememberMe">Remember me</label>
        </div>
        <button class="btn w-full flex items-center justify-center" type="submit">
            <i class="ri-login-box-line mr-2"></i>
            Login
        </button>
    </form>

    <!-- Register Form -->
    <form x-show="!isLogin" action="/register" method="post" class="space-y-4">
        <div class="space-y-2">
            <div class="flex items-center">
                <i class="ri-user-line mr-2"></i>
                <input type="text" class="input w-full border-white-500 focus:outline-none focus:border-red-500" 
                    name="username" placeholder="Username" required />
            </div>
            <div class="flex items-center">
                <i class="ri-mail-line mr-2"></i>
                <input type="email" class="input w-full border-white-500 focus:outline-none focus:border-red-500" 
                    name="email" placeholder="Email Address" required />
            </div>
            <div class="flex items-center">
                <i class="ri-user-smile-line mr-2"></i>
                <input type="text" class="input w-full border-white-500 focus:outline-none focus:border-red-500" 
                    name="name" placeholder="Full Name" required />
            </div>
            <div class="flex items-center">
                <i class="ri-lock-line mr-2"></i>
                <input type="password" class="input w-full hover:border-red-500" 
                    name="password" placeholder="Password" required />
            </div>
        </div>
        <button class="btn w-full flex items-center justify-center" type="submit">
            <i class="ri-user-add-line mr-2"></i>
            Register
        </button>
    </form>

    <!-- Toggle Button -->
    <div class="mt-4 text-center">
        <button class="text-blue-500 hover:text-blue-700" 
            x-text="isLogin ? 'Need an account? Register' : 'Already have an account? Login'"
            @click="isLogin = !isLogin">
        </button>
    </div>
</div>

<%- include("partials/footer.ejs") %>