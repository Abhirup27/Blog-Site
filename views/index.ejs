<%- include("partials/header.ejs") %>
<!-- <h1 class="text-4xl font-bold mb-6">Blog Site</h1> -->
<h1 class="text-4xl font-bold mb-6 text-red-500">Blog Site</h1>
<div class="max-w-md mx-auto">
  <form action="/login" method="post" class="space-y-4">      
    <h2 class="text-2xl font-semibold mb-4">Please login</h2>
    <div class="space-y-2">
      <div class="flex items-center">
        <i class="ri-user-line mr-2"></i>
        <input type="text" class="input w-full" name="username" placeholder="Email Address" required autofocus />
      </div>
      <div class="flex items-center">
        <i class="ri-lock-line mr-2"></i>
        <input type="password" class="input w-full" name="password" placeholder="Password" required />
      </div>
    </div>
    <div class="flex items-center">
      <input type="checkbox" id="rememberMe" name="rememberMe" class="mr-2" />
      <label for="rememberMe">Remember me</label>
    </div>
    <button class="btn w-full flex items-center justify-center" type="submit">
      <i class="ri-login-box-line mr-2"></i>
      Login
    </button>
  </form>
</div>
<%- include("partials/footer.ejs") %>